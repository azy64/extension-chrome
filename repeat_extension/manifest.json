{
    "name": "repeat video",
    "version": "1.0",
    "description": "une extension qui permet de repeter une video ou une chanson en boucle!",
    "manifest_version": 2,
    "permissions": ["storage", "activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "image/ico.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "image/ico.png",
        "32": "image/ico.png",
        "48": "image/ico.png",
        "128": "image/ico.png"
    }
}